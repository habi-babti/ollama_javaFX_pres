<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ollama.olama.controller.SettingsController">
   <top>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <Label text="Settings" styleClass="section-title">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         
         <Separator />
      </VBox>
   </top>
   
   <center>
      <VBox spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         
         <!-- Ollama Configuration -->
         <VBox spacing="10.0">
            <Label text="Ollama Configuration" styleClass="subsection-title">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            
            <GridPane hgap="10.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints minWidth="120.0" />
                  <ColumnConstraints hgrow="ALWAYS" />
                  <ColumnConstraints minWidth="120.0" />
               </columnConstraints>
               
               <Label text="Ollama URL:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
               <TextField fx:id="ollamaUrlField" promptText="http://localhost:11434" GridPane.columnIndex="1" GridPane.rowIndex="0" />
               <Button fx:id="testConnectionButton" onAction="#handleTestConnection" text="Test Connection" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            </GridPane>
            
            <Label text="Enter the base URL where your Ollama server is running" styleClass="help-text" />
         </VBox>
         
         <!-- AI Behavior -->
         <VBox spacing="10.0">
            <Label text="AI Behavior" styleClass="subsection-title">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            
            <VBox spacing="5.0">
               <Label text="System Prompt:" />
               <TextArea fx:id="systemPromptArea" prefRowCount="4" wrapText="true" />
               <Label text="This prompt will be sent with every conversation to customize the AI's behavior and personality" styleClass="help-text" />
            </VBox>
         </VBox>
         
         <!-- Appearance -->
         <VBox spacing="10.0">
            <Label text="Appearance" styleClass="subsection-title">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            
            <GridPane hgap="15.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints minWidth="100.0" />
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>
               
               <Label text="Theme:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
               <ComboBox fx:id="themeComboBox" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
               
               <Label text="Font Family:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
               <ComboBox fx:id="fontFamilyComboBox" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               
               <Label text="Font Size:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
               <Spinner fx:id="fontSizeSpinner" maxWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </GridPane>
            
            <Label text="Changes will be applied immediately for preview" styleClass="help-text" />
         </VBox>
         
         <!-- Status -->
         <HBox alignment="CENTER_LEFT">
            <Label fx:id="statusLabel" styleClass="status-label" />
         </HBox>
      </VBox>
   </center>
   
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         
         <Button fx:id="resetButton" onAction="#handleReset" text="Reset to Defaults" styleClass="secondary-button" />
         
         <!-- Spacer -->
         <Region HBox.hgrow="ALWAYS" />
         
         <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" />
         <Button fx:id="saveButton" onAction="#handleSave" text="Save" styleClass="primary-button" defaultButton="true" />
      </HBox>
   </bottom>
</BorderPane>