<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ollama.olama.controller.UserManagementController">
   <top>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         
         <Label text="User Management" styleClass="section-title">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Button onAction="#handleRefresh" text="Refresh" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="statusLabel" styleClass="status-label" />
         </HBox>
      </VBox>
   </top>
   
   <center>
      <SplitPane dividerPositions="0.6" orientation="VERTICAL">
         
         <!-- Users Table -->
         <VBox spacing="5.0">
            <padding>
               <Insets bottom="10.0" left="15.0" right="15.0" top="5.0" />
            </padding>
            
            <Label text="Existing Users" styleClass="subsection-title">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            
            <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="usernameColumn" prefWidth="120.0" text="Username" />
                  <TableColumn fx:id="roleColumn" prefWidth="80.0" text="Role" />
                  <TableColumn fx:id="statusColumn" prefWidth="80.0" text="Status" />
                  <TableColumn fx:id="createdColumn" prefWidth="130.0" text="Created" />
                  <TableColumn fx:id="lastLoginColumn" prefWidth="130.0" text="Last Login" />
               </columns>
            </TableView>
            
            <Label text="Right-click on a user to activate, deactivate, or delete" styleClass="help-text" />
         </VBox>
         
         <!-- Management Forms -->
         <VBox spacing="15.0">
            <padding>
               <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
            </padding>
            
            <HBox spacing="30.0">
               
               <!-- Create User Form -->
               <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                  <Label text="Create New User" styleClass="subsection-title">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  
                  <GridPane hgap="10.0" vgap="8.0">
                     <columnConstraints>
                        <ColumnConstraints minWidth="80.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                     </columnConstraints>
                     
                     <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                     <TextField fx:id="newUsernameField" promptText="Enter username" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                     
                     <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                     <PasswordField fx:id="newPasswordField" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     
                     <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                     <ComboBox fx:id="newRoleCombo" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  </GridPane>
                  
                  <Button fx:id="createUserButton" onAction="#handleCreateUser" text="Create User" styleClass="primary-button" />
               </VBox>
               
               <!-- Change Password Form -->
               <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                  <Label text="Change User Password" styleClass="subsection-title">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  
                  <GridPane hgap="10.0" vgap="8.0">
                     <columnConstraints>
                        <ColumnConstraints minWidth="80.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                     </columnConstraints>
                     
                     <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                     <TextField fx:id="changePasswordUsernameField" promptText="Enter username" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                     
                     <Label text="New Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                     <PasswordField fx:id="newPasswordForUserField" promptText="Enter new password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  </GridPane>
                  
                  <Button fx:id="changePasswordButton" onAction="#handleChangePassword" text="Change Password" styleClass="primary-button" />
               </VBox>
            </HBox>
         </VBox>
      </SplitPane>
   </center>
   
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
         </padding>
         
         <Button onAction="#handleClose" text="Close" />
      </HBox>
   </bottom>
</BorderPane>